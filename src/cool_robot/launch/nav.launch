<launch>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen" clear_params="true">
      <!-- costmap -->
      <rosparam file="$(find cool_robot)/config/costmap/costmap_common_params.yaml" command="load" ns="global_costmap" />
      <rosparam file="$(find cool_robot)/config/costmap/costmap_common_params.yaml" command="load" ns="local_costmap" />
      <rosparam file="$(find cool_robot)/config/costmap/global_costmap_params.yaml" command="load" />
      <rosparam file="$(find cool_robot)/config/costmap/local_costmap_params.yaml" command="load" />

      <!-- movebase -->
      <rosparam file="$(find cool_robot)/config/move_base_params.yaml" command="load" />

      <!-- global planners -->
      <param name="base_global_planner" value="global_planner/GlobalPlanner"/>
      <rosparam file="$(find cool_robot)/config/global_planner_params.yaml" command="load" />
      
      <!-- local planners -->
      <param name="base_local_planner" value="teb_local_planner/TebLocalPlannerROS" />
      <rosparam file="$(find cool_robot)/config/local_planner/teb_local_planner_params.yaml" command="load" />
      <remap from="cmd_vel" to="cmd_vel_"/>
  </node>
  
</launch>
